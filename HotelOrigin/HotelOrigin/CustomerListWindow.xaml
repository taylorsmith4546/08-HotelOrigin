<Window x:Class="HotelOrigin.CustomerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelOrigin"
        mc:Ignorable="d"
        Title="CustomerListWindow" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="168" Width="272" SelectionChanged="dataGrid_SelectionChanged" SelectionMode="Single"/>
        <Button x:Name="buttonAddCustomer" Content="Add Customer" HorizontalAlignment="Left" Margin="22,193,0,0" VerticalAlignment="Top" Width="108" Height="31" Click="buttonAddCustomer_Click"/>
        <Button x:Name="buttonDeleteCustomer" Content="Delete Customer" HorizontalAlignment="Left" Margin="160,193,0,45" Width="108" Height= "31" Click="buttonDeleteCustomer_Click"/>

    </Grid>
</Window>
